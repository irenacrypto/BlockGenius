# BlockGenius.py

class BlockGenius:
    def __init__(self, platform_name, expertise_areas):
        self.platform_name = platform_name
        self.expertise_areas = expertise_areas
    
    def display_platform_info(self):
        print(f"Platform Name: {self.platform_name}")
        print("Expertise Areas:")
        for area in self.expertise_areas:
            print(f"- {area}")

# Example usage
if __name__ == "__main__":
    platform_name = "BlockGenius"
    expertise_areas = [
        "Blockchain technology",
        "Smart contracts",
        "Cryptocurrency economics",
        "Decentralized finance (DeFi)",
        "Non-fungible tokens (NFTs)"
    ]
    
    block_genius = BlockGenius(platform_name, expertise_areas)
    block_genius.display_platform_info()
